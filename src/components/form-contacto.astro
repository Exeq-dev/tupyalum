---
import '@fortawesome/fontawesome-free/css/all.min.css';
---

<form class="w-full max-w-5xl mx-auto mt-12 my-24 p-6 shadow-2xl">
  <div class="mb-6">
    <label class="block text-blue-700 text-sm font-bold mb-2 uppercase" for="nombre">
      Nombre y Apellido
    </label>
    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="nombre" type="text" placeholder="Tu nombre y apellido" required>
  </div>

  <div class="mb-6">
    <label class="block text-blue-700 text-sm font-bold mb-2 uppercase" for="correo">
      Correo Electrónico
    </label>
    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="correo" type="email" placeholder="correo@ejemplo.com" required>
  </div>

  <div class="mb-6">
    <label class="block text-blue-700 text-sm font-bold mb-2 uppercase" for="telefono">
      Número Celular
    </label>
    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="telefono" type="tel" placeholder="+56 9 XXXX XXXX" pattern="\+56\s9\s\d{4}\s\d{4}" required>
  </div>

  <div class="mb-6">
    <label class="block text-blue-700 text-sm font-bold mb-2 uppercase" for="asunto">
      Asunto
    </label>
    <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="asunto" placeholder="Escribe el asunto" rows="4" required></textarea>
  </div>

  <div class="flex items-center justify-center uppercase">
    <button class="bg-blue-700 hover:bg-blue-900 text-white font-bold py-2 px-4 rounded-2xl focus:outline-none focus:shadow-outline" type="submit">
      Enviar
    </button>
  </div>
  <br>
</form>
