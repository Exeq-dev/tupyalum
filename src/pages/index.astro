---
import Navbar from "../components/navbar.astro";
import Cabezera from "../components/cabezera.astro";
import ContactoCard from "../components/contacto-card.astro";
import Footer from "../components/footer.astro";
import '@fortawesome/fontawesome-free/css/all.min.css';
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Tupyalum - ¡Encuentra tu ventanal!</title>
  </head>

  <body class="bg-gray-100">
    <Navbar />
    <Cabezera />

    <!-- Sección de Título -->
    <div class="text-center mt-44 mb-12">
      <h2 class="text-3xl md:text-4xl font-bold uppercase text-blue-700">¡Algunos Trabajos!</h2>
    </div>

    <!-- Sección de Imágenes -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-8 w-11/12 mx-auto mt-12">
      {[
        {
          img: "../../public/images/1.jpg",
          alt: "Ventanal Moderno",
        },
        {
          img: "../../public/images/2.jpg",
          alt: "Ventanal Clásico",
        },
        {
          img: "../../public/images/3.jpg",
          alt: "Ventanal Panorámico",
        },
        {
          img: "../../public/images/4.jpg",
          alt: "Ventanal Termopanel",
        },
        {
          img: "../../public/images/5.jpg",
          alt: "Ventanal Deslizante",

        }
      ].map((item) => (
        <div  class="bg-white shadow-xl rounded-2xl overflow-hidden block transform transition-transform duration-300 hover:scale-105 hover:opacity-90">
          <div class="w-full aspect-[9/16] sm:aspect-[3/5] p-4">
            <img src={item.img} alt={item.alt} class="w-full h-full object-cover rounded-lg">
          </div>

        </div>
      ))}
    </div>

    <!-- Tarjeta de Contacto -->
    <ContactoCard />

    <!-- Footer -->
    <Footer />
  </body>
</html>
